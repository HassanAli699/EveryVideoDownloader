<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EveryVideoDownloader" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">#00000000</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.EveryVideoDownloader" parent="Base.Theme.EveryVideoDownloader">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/primaryRed</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="colorAccent">@color/cardColor</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>


    <style name="textStyle" parent="Base.Theme.EveryVideoDownloader">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/backgroundColor</item>
        <item name="android:drawablePadding">10dp</item>

    </style>

    <style name="LeftRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryRed</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="colorAccent">@color/cardColor</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

</resources>